{
  "manifest_version": 3,
  "name": "SnapShotz",
  "version": "1.0",
  "description": "Capture visible area screenshots",
  "permissions": ["activeTab", "scripting", "downloads"],
  "host_permissions": ["<all_urls>"],
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "action": {
    "default_popup": "index.html",
    "default_icon": "/icons/icon3.png"
  }
}
