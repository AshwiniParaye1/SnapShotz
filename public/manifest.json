{
  "manifest_version": 3,
  "name": "SnapShotz",
  "version": "1.1",
  "description": "Capture screenshots and screen recordings",
  "permissions": ["activeTab", "scripting", "downloads", "desktopCapture"],
  "host_permissions": ["<all_urls>"],
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "action": {
    "default_popup": "index.html",
    "default_icon": "/icons/icon4.png"
  }
}
